long encodeColor(const QColor &color)
{
  long result = 0;

  result |= color.red();
  result |= color.green() << 8;
  result |= color.blue() << 16;

  return result;
}

QColor decodeColor(long color)
{
  return QColor(color & 0xff, (color >> 8) & 0xff, (color >> 16) & 0xff);
}

} // anon. namespace

